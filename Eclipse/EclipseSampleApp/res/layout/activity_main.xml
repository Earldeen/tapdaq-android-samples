<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tapdaq.eclipsesample.MainActivity" >

    <Button
        android:id="@+id/demo_load_static_interstitial_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load"/>

    <Button
        android:id="@+id/demo_load_video_interstitial_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/demo_load_static_interstitial_btn"
        android:text="Load"/>

    <Button
        android:id="@+id/demo_load_rewarded_video_interstitial_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/demo_load_video_interstitial_btn"
        android:text="Load"/>

    <Button
        android:id="@+id/demo_static_interstitial_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/demo_load_static_interstitial_btn"
        android:text="Static"/>

    <Button
        android:id="@+id/demo_video_interstitial_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/demo_load_video_interstitial_btn"
        android:layout_toRightOf="@+id/demo_load_video_interstitial_btn"
        android:layout_below="@+id/demo_static_interstitial_btn"
        android:text="Video"/>

    <Button
        android:id="@+id/demo_rewarded_video_interstitial_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/demo_load_rewarded_video_interstitial_btn"
        android:layout_toRightOf="@+id/demo_load_rewarded_video_interstitial_btn"
        android:layout_below="@+id/demo_video_interstitial_btn"
        android:text="Rewarded Video"/>

</RelativeLayout>
